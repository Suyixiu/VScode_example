{
    "version": "2.0.0",
    "command": "g++",
    "args": [ // 编译命令参数
        "-g","main.cpp","-o","${fileBasenameNoExtension}.exe",
        "-I","C:/software/opencv/opencv/build/x64/MinGW/include",           //-I头文件路径
        "-L","C:/software/opencv/opencv/build/x64/MinGW/bin",               //-L动态库
        "-l","libopencv_core341",                                           //-l静态链接库
        "-l","libopencv_highgui341",
        "-l","libopencv_imgproc341"
    ],
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "${workspaceRoot}"
        ],
        "pattern": {
            "regexp": "^(.*):(//d+):(//d+)://s+(warning|error)://s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}